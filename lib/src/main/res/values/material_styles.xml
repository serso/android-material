<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="BaseMaterialTheme"/>
	<style name="BaseMaterialTheme.NoActionBar"/>

	<style name="MaterialTheme" parent="BaseMaterialTheme">
		<item name="android:background">@null</item>
		<item name="android:windowBackground">@color/material_bg</item>
		<item name="android:listViewStyle">@style/MaterialListView</item>
		<item name="android:textColor">@color/material_text_selector</item>
		<item name="android:textColorPrimary">@color/material_text_selector</item>
		<item name="android:textColorSecondary">@color/material_text_selector</item>
		<item name="android:textColorTertiary">@color/material_text_selector</item>
	</style>

	<style name="MaterialTheme.NoActionBar" parent="BaseMaterialTheme.NoActionBar">
		<item name="android:background">@null</item>
		<item name="android:windowBackground">@color/material_bg</item>
		<item name="android:listViewStyle">@style/MaterialListView</item>
		<item name="android:textColor">@color/material_text_selector</item>
		<item name="android:textColorPrimary">@color/material_text_selector</item>
		<item name="android:textColorSecondary">@color/material_text_selector</item>
		<item name="android:textColorTertiary">@color/material_text_selector</item>
	</style>

	<style name="MaterialCard">
		<item name="android:layout_margin">@dimen/material_card_margin</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/material_card_selector</item>
		<item name="android:clickable">false</item>
		<item name="android:paddingTop">5dp</item>
		<!-- bottom padding is bigger than top because of shadow-->
		<item name="android:paddingBottom">8dp</item>
		<item name="android:paddingLeft">7dp</item>
		<item name="android:paddingRight">7dp</item>
		<item name="android:gravity">left|center_vertical</item>
	</style>

	<style name="MaterialButton.Raised" parent="MaterialButton">
		<item name="materialColor">@color/material_button_blue_selector</item>
		<item name="android:textColor">@color/material_raised_button_text_selector</item>
	</style>

	<style name="MaterialActivity">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
		<item name="android:paddingTop">@dimen/activity_vertical_margin</item>
		<item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
		<item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
	</style>

	<style name="MaterialButton" parent="android:Widget.Button">
		<item name="materialColor">@color/material_button_selector</item>
		<item name="android:textColor">@color/material_button_text_selector</item>
	</style>

	<style name="MaterialListView" parent="BaseMaterialListView" />

	<style name="BaseMaterialListView" parent="@android:style/Widget.ListView.White">
		<item name="android:cacheColorHint">@android:color/transparent</item>
		<item name="android:listSelector">@drawable/material_clickable_selector</item>
	</style>
</resources>
